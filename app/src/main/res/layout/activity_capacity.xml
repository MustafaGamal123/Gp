<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white"
    tools:context=".CapacityActivity"> <!-- إضافة السياق الصحيح -->

    <!-- عنوان السعة -->
    <TextView
        android:id="@+id/tvCapacityTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capacity Details"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

    <!-- شريط تقدم يوضح نسبة امتلاء السلة -->
    <ProgressBar
        android:id="@+id/progressBarCapacity"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:progress="65"
        android:max="100"
        android:progressTint="@android:color/holo_green_dark"
        app:layout_constraintTop_toBottomOf="@id/tvCapacityTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

    <!-- نص يعرض النسبة الحالية من الامتلاء -->
    <TextView
        android:id="@+id/tvCapacityStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Capacity: 65%"
        android:textSize="18sp"
        android:textColor="@android:color/holo_green_dark"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/progressBarCapacity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
