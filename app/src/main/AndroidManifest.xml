<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.my_app">

    <!-- Required Permissions -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <!-- Ensure the device has a camera -->
    <uses-feature android:name="android.hardware.camera" android:required="true"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.My_App"
        tools:targetApi="31">

        <!-- SplashActivity as launcher -->
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- RegistrationActivity -->
        <activity
            android:name=".RegistrationActivity"
            android:exported="true" />

        <!-- MainActivity -->
        <activity
            android:name=".MainActivity"
            android:exported="true" />

        <!-- AdminActivity -->
        <activity
            android:name=".AdminActivity"
            android:exported="true" />

        <!-- CollectorActivity -->
        <activity
            android:name=".CollectorActivity"
            android:exported="true" />

        <!-- Additional Activities -->
        <activity android:name=".CapacityActivity" android:exported="false" />
        <activity android:name=".LocationActivity" android:exported="false" />
        <activity android:name=".EnvironmentalDataActivity" android:exported="false" />
        <activity android:name=".AlertsNotificationsActivity" android:exported="false" />
        <activity android:name=".TypeOfBinActivity" android:exported="false" />
        <activity android:name=".TipsActivity" android:exported="false" />

        <!-- ✅ تم إضافة VoiceFragment -->
        <activity android:name=".VoiceFragment" android:exported="false" />

        <!-- Removed Firebase MessagingService as Firebase is not used -->

        <!-- FileProvider configuration -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.example.my_app.fileprovider"
            android:grantUriPermissions="true"
            android:exported="false">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"/>
        </provider>

    </application>
</manifest>
